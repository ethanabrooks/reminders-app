# Server configuration
PORT=3000

# JWT signing (run `npm run gen-keys` to generate)
COMMAND_SIGNING_PRIVATE_PATH=./keys/private.pem
# OR inline (for deployment):
# COMMAND_SIGNING_PRIVATE="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# APNs configuration (optional - enables push notifications)
# Get these from Apple Developer portal:
# 1. Create an APNs Auth Key (.p8 file)
# 2. Note the Key ID and Team ID
APNS_KEY_PATH=./keys/AuthKey_XXXXXXXXXX.p8
APNS_KEY_ID=XXXXXXXXXX
APNS_TEAM_ID=XXXXXXXXXX
APNS_BUNDLE_ID=com.example.GPTReminders
APNS_PRODUCTION=false

# Without APNs, the iOS app will poll /device/commands instead
